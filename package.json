{
  "name": "dot.most.box",
  "version": "0.1.3",
  "description": "Dot 去中心化节点",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "require": "./dist/server.js",
      "types": "./dist/server.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "nodemon server.mjs --port=1976",
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "pre-publish": "rm -rf dist && rm -rf node_modules && pnpm i && npm run build",
    "pnpm": "pnpm i"
  },
  "dependencies": {
    "ethers": "^6.13.5",
    "tweetnacl": "^1.0.3",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@fastify/static": "^8.1.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.13.5",
    "@types/ws": "^8.5.14",
    "fastify": "^5.2.1",
    "rollup": "^4.34.8",
    "rollup-plugin-dts": "^6.1.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  },
  "nodemonConfig": {
    "ignore": [
      "dot-data.json"
    ]
  }
}