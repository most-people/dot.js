{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ES2015", "DOM"],
        "moduleResolution": "Node",
        "allowUmdGlobalAccess": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitHelpers": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
